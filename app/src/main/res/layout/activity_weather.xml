<?xml version="1.0" encoding="utf-8"?>



<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark">





    <Button
        android:text="   Back"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:id="@+id/backButton"
        android:background="@android:color/transparent"
        android:cacheColorHint="@android:color/transparent"

        android:backgroundTint="@android:color/background_light"

        android:layout_marginTop="34dp"

        android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="20sp"
        android:lineSpacingExtra="14sp"
        android:textAllCaps="false"
        android:textAlignment="viewStart"
        android:textStyle="normal|bold" />

    <ListView
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:cacheColorHint="@android:color/transparent"
        android:id="@+id/listViewTwo"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:paddingTop="1dp"
        android:layout_marginLeft="57dp"
        android:layout_marginStart="57dp"
        android:layout_alignBottom="@+id/backButton"
        android:layout_toRightOf="@+id/backButton"
        android:layout_toEndOf="@+id/backButton" />

    <TextView
        android:text="Conditions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/conditionsTextView"
        android:textColor="@color/Primary"
        android:layout_above="@+id/temperatureTextView"
        android:layout_alignStart="@+id/temperatureTextView" />

    <TextView
        android:text="Temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/temperatureTextView"
        android:textColor="@color/Primary"
        android:layout_alignBaseline="@+id/locationTextView"
        android:layout_alignBottom="@+id/locationTextView"
        android:layout_toEndOf="@+id/listViewTwo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/locationTextView"
        android:layout_marginLeft="13dp"
        android:layout_below="@+id/backButton"
        android:layout_toEndOf="@+id/cityTextView"
        android:layout_marginTop="49dp" />

    <TextView
        android:text="windspeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/windspeedTextView"
        android:textColor="@color/Primary"
        android:layout_below="@+id/temperatureTextView"
        android:layout_alignEnd="@+id/conditionsTextView" />

    <TextView
        android:text="humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/humidityTextView"
        android:textColor="@color/Primary"
        android:layout_below="@+id/windspeedTextView"
        android:layout_alignStart="@+id/windspeedTextView" />

    <TextView
        android:text="City"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cityTextView"
        android:textColor="@color/Primary"
        android:textAlignment="center"
        android:layout_below="@+id/listViewTwo"
        android:layout_alignEnd="@+id/humidityTextView" />


    <Button
        android:text="Photos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/humidityTextView"
        android:layout_toRightOf="@+id/backButton"
        android:layout_toEndOf="@+id/backButton"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:id="@+id/photosButton" />

    <ImageView
        android:id="@+id/weatherIconImageView"
        android:layout_below="@+id/photosButton"
        android:layout_alignLeft="@+id/listViewTwo"
        android:layout_alignStart="@+id/listViewTwo"
        android:layout_width="75dp"
        android:layout_height="75dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/card_recycler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/listViewTwo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!--<ImageView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--app:srcCompat="@drawable/test"-->
        <!--android:layout_alignTop="@+id/windspeedTextView"-->
        <!--android:layout_toStartOf="@+id/listViewTwo"-->
        <!--android:id="@+id/testImageView" />-->


</RelativeLayout>
