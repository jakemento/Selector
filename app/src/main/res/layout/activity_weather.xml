<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cities"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sociopathycheck.selector.ui.WeatherActivity"
    android:background="#000000">

    <Button
        android:text="   Back"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:id="@+id/backButton"
        android:background="@android:color/transparent"
        android:cacheColorHint="@android:color/transparent"

        android:backgroundTint="@android:color/background_light"

        android:layout_marginTop="34dp"

        android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="20sp"
        android:lineSpacingExtra="14sp"
        android:textAllCaps="false"
        android:textAlignment="viewStart"
        android:textStyle="normal|bold" />

    <ListView
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:cacheColorHint="@android:color/transparent"
        android:id="@+id/listViewTwo"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:paddingTop="1dp"
        android:layout_marginLeft="57dp"
        android:layout_marginStart="57dp"
        android:layout_alignBottom="@+id/backButton"
        android:layout_toRightOf="@+id/backButton"
        android:layout_toEndOf="@+id/backButton" />

    <TextView
        android:text="Conditions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/conditionsTextView"
        android:textColor="@color/Primary"
        android:layout_above="@+id/temperatureTextView"
        android:layout_alignStart="@+id/temperatureTextView" />

    <TextView
        android:text="Temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/temperatureTextView"
        android:textColor="@color/Primary"
        android:layout_alignBaseline="@+id/locationTextView"
        android:layout_alignBottom="@+id/locationTextView"
        android:layout_toEndOf="@+id/listViewTwo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/locationTextView"
        android:layout_marginLeft="13dp"
        android:layout_below="@+id/backButton"
        android:layout_toEndOf="@+id/cityTextView"
        android:layout_marginTop="49dp" />

    <TextView
        android:text="windspeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/windspeedTextView"
        android:textColor="@color/Primary"
        android:layout_below="@+id/temperatureTextView"
        android:layout_alignEnd="@+id/conditionsTextView" />

    <TextView
        android:text="humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/humidityTextView"
        android:textColor="@color/Primary"
        android:layout_below="@+id/windspeedTextView"
        android:layout_alignStart="@+id/windspeedTextView" />

    <TextView
        android:text="City"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cityTextView"
        android:textColor="@color/Primary"
        android:textAlignment="center"
        android:layout_below="@+id/listViewTwo"
        android:layout_alignEnd="@+id/humidityTextView" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/humidityTextView"
        android:layout_toStartOf="@+id/temperatureTextView"
        android:layout_marginTop="207dp" />

    <TextView
        android:text="test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/humidityTextView"
        android:layout_toEndOf="@+id/backButton"
        android:layout_marginTop="87dp"
        android:id="@+id/testTextView"
        android:textColor="@color/Primary" />


</RelativeLayout>
